{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "richtext"
    },
    "uri": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published",
        "archive"
      ],
      "default": "draft",
      "required": true
    }
  }
}
